        <script>
            function func_Palindrome(Text_String) {
                var i = 0;
                var n = 5;
                var Pal_String = Text_String.toLowerCase();
                var Pal_String2 = Pal_String.replace(/ /g, "");
                Pal_String = '';
                for (i = Pal_String2.length; i >= 0; i--) {
                    Pal_String += Pal_String2.charAt(i);
                }
                n = Pal_String.localeCompare(Pal_String2);
                if (n == 0) { Is_Pal = "<span style='color: green; font-weight: bold'>Wow!  Your word or phrase is a Palindrome!!!!!</span>" }
                else { Is_Pal = "<span style='color: red'>Sorry friend, your word or phrase is not a Palindrome.</span>" }
                document.getElementById("Is_Pal").innerHTML = Is_Pal;
            }
        </script>
