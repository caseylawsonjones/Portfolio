                                var i = 0;
                                var n = 5;
                                var Pal_String = Text_String.toLowerCase();
                                var Pal_String2 = Pal_String.replace(/ /g, "");
                                Pal_String = '';
                                for (i = Pal_String2.length; i >= 0; i--) {
